          <%= link_to image_tag("https://www-league.nhlstatic.com/images/logos/teams-current-primary-light/#{team['id']}.svg", :size => "50x40"), team_path(team['id']) %>
          <%= link_to "#{team['name']}", team_path(team['id']), class: "text-decoration-none" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
