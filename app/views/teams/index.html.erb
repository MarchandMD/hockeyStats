<h1>Teams#index</h1>
<div class="container">
  <div class="row">
    <% @all_teams.each do |team| %>
      <div class="card col-sm-3">
        <div class="card-body">
          <%= link_to team['name'], team_path(team['id']) %>
          <p class="card-text">Team id:<%= team['id']%></p>
          <p class="card-text">team link:<%= team['link']%></p>
          <p class="card-text">Rink</p>
          <% team['venue'].each_pair do |key, value| %>
            <p class="card-text"><%=  "#{key} : #{value}" %></p>
          <% end%>
          <p class="card-text">team official site URL:<%= link_to(team['officialSiteUrl'], team['officialSiteUrl'] )%></p>
        </div>
      </div>
    <% end %>
    <%= @teams.all[:data].class %>
    <%= @teams.all[:data].count %>
    <%= @teams.all[:data].pop %>
  </div>
</div>
